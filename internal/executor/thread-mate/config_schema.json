{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "ThreadMate",
  "uiSchema": {
    "roundRobin": {
      "assignees": {
        "ui:classNames": "non-orderable",
        "ui:options": {
          "orderable": false
        },
        "items": {
          "ui:options": {
            "label": false
          }
        }
      }
    }
  },
  "properties": {
    "roundRobin": {
      "type": "object",
      "title": "Round Robin Configuration",
      "properties": {
        "assignees": {
          "type": "array",
          "items": {
            "type": "string",
            "title": "Assignee",
            "minLength": 3,
            "default": ""
          },
          "minItems": 1,
          "title": "Assignees",
          "description": "Assignee in format {id}:{name}, e.g. 'U0401FW96U8:Pawe≈Ç'"
        },
        "groupName": {
          "type": "string",
          "default": "default",
          "title": "Group Name"
        }
      },
      "required": [
        "assignees"
      ]
    },
    "pick": {
      "type": "object",
      "title": "Pick Configuration",
      "properties": {
        "userCooldownTime": {
          "type": "string",
          "default": "3m",
          "description": "Represents the time that must elapse for a given user's message before the 'pick' method can be used again.",
          "title": "User Cooldown Time"
        },
        "messagesTemplate": {
          "type": "string",
          "title": "Messages Template"
        }
      }
    },
    "persistence": {
      "type": "object",
      "title": "Persistence Configuration",
      "properties": {
        "syncInterval": {
          "type": "string",
          "default": "5s",
          "title": "Sync Interval",
          "description": "Represents the time that must elapse before saving in-memory data."
        },
        "configMapNamespace": {
          "type": "string",
          "default": "botkube",
          "title": "Config Map Namespace"
        }
      }
    },
    "log": {
      "title": "Logging",
      "description": "Logging configuration for the plugin.",
      "type": "object",
      "properties": {
        "level": {
          "title": "Log Level",
          "description": "Define log level for the plugin. Ensure that Botkube has plugin logging enabled for standard output.",
          "type": "string",
          "default": "info",
          "oneOf": [
            {
              "const": "panic",
              "title": "Panic"
            },
            {
              "const": "fatal",
              "title": "Fatal"
            },
            {
              "const": "error",
              "title": "Error"
            },
            {
              "const": "warn",
              "title": "Warning"
            },
            {
              "const": "info",
              "title": "Info"
            },
            {
              "const": "debug",
              "title": "Debug"
            },
            {
              "const": "trace",
              "title": "Trace"
            }
          ]
        },
        "disableColors": {
          "type": "boolean",
          "default": false,
          "description": "If enabled, disables color logging output.",
          "title": "Disable Colors"
        }
      }
    }
  },
  "required": [
    "roundRobin",
    "pick",
    "persistence"
  ]
}
