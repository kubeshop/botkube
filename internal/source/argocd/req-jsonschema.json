{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "sections": {
          "type": "object",
          "properties": {
            "header": {
              "type": "string"
            },
            "textFields": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "additionalProperties": true
    },
    "context": {
      "type": "object",
      "properties": {
        "app": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          }
        },
        "detailsUiPath": {
          "type": "string"
        },
        "repoUrl": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
